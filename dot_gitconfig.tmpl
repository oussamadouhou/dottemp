# ~/.gitconfig - Git configuration managed by chezmoi

[user]
    name = {{ .name }}
    email = {{ .email }}
{{ if .gpgkey }}
    signingkey = {{ .gpgkey }}

[commit]
    gpgsign = true
{{ end }}

[core]
    editor = {{ if eq .chezmoi.os "windows" }}code --wait{{ else }}nvim{{ end }}
    autocrlf = {{ if eq .chezmoi.os "windows" }}true{{ else }}input{{ end }}
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    light = false
    line-numbers = true
    side-by-side = false

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[init]
    defaultBranch = main

[pull]
    rebase = false

[push]
    default = simple
    autoSetupRemote = true

[fetch]
    prune = true

[alias]
    # Basic shortcuts
    st = status
    co = checkout
    br = branch
    ci = commit
    unstage = reset HEAD --
    
    # Logging
    lg = log --oneline --graph --decorate
    lga = log --oneline --graph --decorate --all
    last = log -1 HEAD
    
    # Diff shortcuts
    df = diff
    dc = diff --cached
    
    # Branch management
    branches = branch -a
    remotes = remote -v
    
    # Stash shortcuts
    sl = stash list
    sa = stash apply
    ss = stash save

{{ if .devmachine }}
[url "git@github.com:"]
    insteadOf = https://github.com/
{{ end }}

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red
    new = green

[color "status"]
    added = yellow
    changed = green
    untracked = cyan
